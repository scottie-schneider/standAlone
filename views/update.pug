extends layout

block content
  .main.container.row
    .col-md-6.col-md-offset-3
      h1.display-4.m-b-2 Edit your profile
      form(action="/profile" method="POST")
        div.form-group
          label(for="firstName") Name:  
          input.form-control(type="text" name="firstName")
        div.form-group
          label(for="lastName") Test:  
          input.firstName(type="text" name="lastName")
        button.btn.btn-primary(type='submit') Update